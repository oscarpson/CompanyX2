<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="joslabs.companyx.payments.Payments"
    tools:showIn="@layout/activity_payments">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:elevation="4dp"
        android:layout_margin="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtenter"
                style="@style/TextAppearance.AppCompat.Body2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enter Customer Id"
                android:textAlignment="center" />

            <ImageView
                android:id="@+id/imguser"
                android:layout_width="20dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/txtenter"
               android:layout_centerHorizontal="true"
                android:layout_marginLeft="20dp"

                android:layout_marginTop="10dp"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_user" />

            <EditText
                android:id="@+id/edtcustomerid"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_below="@id/txtenter"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/imguser"
                android:hint="2345"
                android:text="33288" />

            <TextView
                android:id="@+id/txtentercash"
                style="@style/TextAppearance.AppCompat.Body2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/imguser"

                android:text="Enter cash paid"
                android:textAlignment="center" />

            <ImageView
                android:id="@+id/imgpay"
                android:layout_width="20dp"
                android:layout_height="40dp"

                android:layout_below="@id/txtentercash"

                android:layout_marginTop="10dp"
               android:layout_marginLeft="20dp"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_money" />

            <EditText
                android:id="@+id/edtcustomerpay"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_below="@+id/txtentercash"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/imgpay"
                android:layout_toRightOf="@+id/imgpay"
                android:hint="2345"
                android:text="33288" />

            <Button
                android:id="@+id/btnpay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/edtcustomerpay"
                android:layout_margin="20dp"
                android:text="Pay" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
