<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="joslabs.companyx.productdistribution.Productdistribution"

    tools:showIn="@layout/activity_productdistribution">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:elevation="4dp"
        android:layout_centerHorizontal="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txttotalproduct"
                android:textAlignment="center"
                android:text="Total productB distribution  50 packs"/>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:adjustViewBounds="true"
                android:layout_marginLeft="10dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/imgtotal"
                android:layout_below="@id/txttotalproduct"
                android:layout_alignParentLeft="true"
                android:src="@drawable/ic_user"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtcashtotal"
                android:layout_toRightOf="@id/imgtotal"
                android:layout_below="@id/txttotalproduct"
                android:text="Ksh 33000"
                />
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:adjustViewBounds="true"
                android:layout_marginLeft="10dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/imgtpending"
                android:layout_marginTop="10dp"
                android:layout_below="@id/txtcashtotal"
                android:layout_alignParentLeft="true"
                android:src="@drawable/ic_money"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pending cash  Ksh 5000"
                android:layout_marginTop="10dp"
                android:layout_below="@id/txtcashtotal"
                android:layout_toRightOf="@id/imgtpending"
                android:id="@+id/txtpendingcash"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:adjustViewBounds="true"
                android:layout_marginLeft="10dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/imgtcash"
                android:layout_marginTop="10dp"
                android:layout_below="@id/imgtpending"
                android:layout_alignParentLeft="true"
                android:src="@drawable/ic_money"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pending cash  Ksh 5000"
                android:layout_marginTop="10dp"
                android:layout_below="@id/txtpendingcash"
                android:layout_toRightOf="@id/imgtcash"
                android:id="@+id/txttcash"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>
